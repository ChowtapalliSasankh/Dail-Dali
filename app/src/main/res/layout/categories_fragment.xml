<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.categories_fragment">
    <com.daimajia.slider.library.SliderLayout
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:id="@+id/imgslider"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/GridLayout"
        android:layout_marginEnd="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_large"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_small" />
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgslider"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/categoriesProgress"
        android:visibility="gone"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgslider"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/categoriestryagainbutton"
        android:text="@string/try_again"
        android:textSize="@dimen/Textsize_small"
        android:padding="@dimen/margin_small"
        android:textColor="@color/colorTextSelected"
        android:background="@color/colorCardView"
        android:visibility="gone"/>
    <android.support.v7.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="250dp"
        app:layout_constraintVertical_weight="4"
        android:layout_marginTop="@dimen/margin_verysmall"
        app:layout_constraintTop_toBottomOf="@+id/imgslider"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="@dimen/margin_verysmall"
        android:id="@+id/GridLayout"
        android:layout_marginStart="@dimen/margin_small"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.93">
    </android.support.v7.widget.RecyclerView>
</android.support.constraint.ConstraintLayout>
